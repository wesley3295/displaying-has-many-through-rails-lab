<%= @doctor.name %><br>
<%= @doctor.department %><br>
<% @doctor.appointments.each do |appointment| %>
    <% i_patient = @doctor.patients.find(appointment.patient_id) %>
    <%= link_to i_patient.name, patient_path(i_patient) %>
    <%= appointment.appointment_datetime.strftime("%B %d, %Y at %k:%M") %><br>
<% end %>

